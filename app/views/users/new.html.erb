<body>
<h1> Sign up </h1>
<%= form_for @user do |f| %>
    <%= flash[:errors] if (flash[:errors]) %>
    <div class="question">

 <label id="username">Username</label>
 <%=f.text_field :name%><br/>

 <label id="password">Password</label>
 <%=f.password_field :password%><br/>

 <%= f.submit %> 


<% end%>

 <%= button_to "Back to Login", login_path, method: "get" %>
    </div>
 </body>