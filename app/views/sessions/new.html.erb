<body>
<h1>Login</h1>
<div class="question">
<%= flash[:warning] if (flash[:warning]) %>

<%= form_tag "/login", method: :post do%>
  
  <div>
    <%= label_tag :username %><br>
    <%= text_field_tag :name%>
  </div>

  <div>
    <%= label_tag :password %><br>
    <%= password_field_tag :password%>
  </div>
  <br>
  <%= submit_tag "Login", class: "btn btn-default" %>
<%end%>
</div>
</body>